<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    style="@style/Base.TextAppearance.AppCompat.Body2"
    android:background="#ff3f51b5">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вивчити нові слова"
        android:id="@+id/learn_words"
        android:layout_above="@+id/repite_words"
        android:layout_alignRight="@+id/repite_words"
        android:layout_alignEnd="@+id/repite_words"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Повторити вивчені слова"
        android:id="@+id/repite_words"
        android:layout_above="@+id/dictionary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Словник"
        android:id="@+id/dictionary"
        android:layout_above="@+id/reader"
        android:layout_alignLeft="@+id/repite_words"
        android:layout_alignStart="@+id/repite_words"
        android:layout_alignRight="@+id/repite_words"
        android:layout_alignEnd="@+id/repite_words" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Читалка-перекладач"
        android:id="@+id/reader"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/dictionary"
        android:layout_alignStart="@+id/dictionary"
        android:layout_alignRight="@+id/dictionary"
        android:layout_alignEnd="@+id/dictionary" />

</RelativeLayout>
